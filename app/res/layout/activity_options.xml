<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientback"
    tools:context=".OptionsActivity">

    <Button
        android:id="@+id/btnBookAppointment"
        android:layout_width="264dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/circle_shape"
        android:drawableLeft="@drawable/ic_bookapp"
        android:text="Book Appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHealthCheck"
        android:layout_width="272dp"
        android:layout_height="64dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/circle_shape"
        android:drawableLeft="@drawable/checkup"
        android:text="Health Checkup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBookAppointment" />

    <Button
        android:id="@+id/btnConsultOnline"
        android:layout_width="278dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_shape"
        android:drawableLeft="@drawable/online_con"
        android:text="Consult Online"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHealthCheck" />

    <Button
        android:id="@+id/btnBuyMedicine"
        android:layout_width="274dp"
        android:layout_height="54dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/circle_shape"
        android:drawableLeft="@drawable/buy_medication_24"
        android:text="Buy Medicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnConsultOnline" />

    <Button
        android:id="@+id/btnViewHealthRecord"
        android:layout_width="292dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/circle_shape"
        android:drawableLeft="@drawable/health_rec"
        android:text="View Health Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBuyMedicine" />

</androidx.constraintlayout.widget.ConstraintLayout>
